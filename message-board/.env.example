# ===========================================
# Basic Application Settings
# ===========================================
APP_NAME=MessageBoard
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC

# ===========================================
# URL Configuration
# ===========================================
# Regular URL (Development/Production)
APP_URL=http://localhost:8000

# Tor URL (Uncomment and replace with your onion address)
# APP_URL=http://your-onion-address.onion

# ===========================================
# Database Configuration - MySQL
# ===========================================
# MySQL Settings (Recommended for Production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=message_board
DB_USERNAME=root
DB_PASSWORD=

# ===========================================
# Database Configuration - SQLite
# ===========================================
# SQLite Settings (Recommended for Development)
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# ===========================================
# Tor-Specific Configuration
# ===========================================
# Required for Tor Hidden Service
# FORCE_SCHEME=http
# SESSION_SECURE_COOKIE=false
# SESSION_SAME_SITE=lax
# SANCTUM_STATEFUL_DOMAINS=your-onion-address.onion
# SESSION_DOMAIN=.onion

# ===========================================
# Session Configuration
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===========================================
# Cache Configuration
# ===========================================
# CACHE_STORE=database
# CACHE_PREFIX=

# ===========================================
# Queue Configuration
# ===========================================
# BROADCAST_CONNECTION=log
# FILESYSTEM_DISK=local
# QUEUE_CONNECTION=database

# ===========================================
# Mail Configuration
# ===========================================
# MAIL_MAILER=log
# MAIL_SCHEME=null
# MAIL_HOST=127.0.0.1
# MAIL_PORT=2525
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_FROM_ADDRESS="hello@example.com"
# MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Redis Configuration
# ===========================================
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ===========================================
# Memcached Configuration
# ===========================================
# MEMCACHED_HOST=127.0.0.1

# ===========================================
# AWS Configuration
# ===========================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# Frontend Configuration
# ===========================================
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# API Configuration
# ===========================================
# YouTube API Configuration
# YOUTUBE_API_KEY=

# ===========================================
# File Upload Configuration
# ===========================================
# UPLOAD_MAX_FILESIZE=2048
# UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif

# ===========================================
# Message Board Specific Settings
# ===========================================
MESSAGE_PAGINATION=10
MESSAGE_PREVIEW_LENGTH=200
YOUTUBE_EMBED_WIDTH=560
YOUTUBE_EMBED_HEIGHT=315

# ===========================================
# Localization Settings
# ===========================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ===========================================
# Maintenance Mode Settings
# ===========================================
# APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ===========================================
# Server Configuration
# ===========================================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===========================================
# Logging Configuration
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
